<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/page"
    android:id="@+id/pokemons"
     >

    <Button
        android:id="@+id/pyeniden"
          android:text="@string/yenidendene"
        android:background="@drawable/buttoncustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="31dp"
        
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ptimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="0"
          android:textColor="#FFFFFF"
        android:background="@drawable/imagecustom"
        android:textSize="75sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/pimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/pdesc"
        android:layout_width="match_parent"
  
        android:layout_above="@+id/pyeniden"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
       
         android:layout_height="50dp"
             android:background="@drawable/confirm"
        android:text="TextView"
        android:textColor="#0033FF"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/pswitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/confirm"
        android:text="@string/devam"
        android:textStyle="bold" />

</RelativeLayout>
