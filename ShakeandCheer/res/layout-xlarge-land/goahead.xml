<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/warning"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/list_background_pressed" >

    <TextView
        android:id="@+id/wartextView1"
         android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@drawable/buttoncustom"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/wartextView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@drawable/buttoncustom"
        android:layout_above="@+id/wartextView1"
         android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/wartextView1"
        android:layout_marginBottom="95dp"
        android:text="TextView" />

    <TableRow
        android:id="@+id/wartableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/wartextView1"
        android:layout_marginTop="221dp" >

        <Button
            android:id="@+id/warbutton1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:background="@drawable/buttoncustom"
            android:text="Button"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/warbutton2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:background="@drawable/buttoncustom"
            android:text="Button"
            android:textColor="#FFFFFF" />
    </TableRow>

</RelativeLayout>