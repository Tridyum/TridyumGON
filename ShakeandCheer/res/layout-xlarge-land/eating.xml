<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
     android:background="@drawable/page"
    android:layout_height="fill_parent"
    android:id="@+id/eatings"
     >

    <TextView
        android:id="@+id/eatimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easwitch1"
              android:textColor="#FFFFFF"
             android:background="@drawable/imagecustom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="0"
        android:textSize="85sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/easwitch1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/confirm"
        android:text="@string/devam"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/eayeniden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttoncustom"
        android:text="@string/yenidendene"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eadesc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/eatimer"
        android:layout_marginTop="117dp"
        android:background="@drawable/confirm"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#0033FF"
        android:textSize="45sp"
        android:textStyle="bold" />

</RelativeLayout>