<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/page"
    android:id="@+id/jobs"
     >

    <Button
        android:id="@+id/jyeniden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="31dp"
        android:text="@string/yenidendene"
        android:background="@drawable/buttoncustom"
       
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jdesc"
        android:layout_width="match_parent"
  
        android:layout_above="@+id/jyeniden"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="73dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="35sp"
        android:textStyle="bold"
        
        android:layout_height="50dp"
             android:background="@drawable/confirm"
   
        android:textColor="#0033FF"
         />

    <Switch
        android:id="@+id/jswitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/confirm"
        android:text="@string/devam"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jtimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jswitch1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:background="@drawable/imagecustom"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="65sp"
        android:textStyle="bold" />

</RelativeLayout>