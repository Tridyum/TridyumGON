<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/page"
    android:id="@+id/clothes"
     >

    <TextView
        android:id="@+id/cdesc"
        android:layout_width="match_parent"
        
        android:layout_above="@+id/cyeniden"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
    
        android:layout_height="50dp"
             android:background="@drawable/confirm"
        android:text="TextView"
        android:textColor="#0033FF"
        android:gravity="center"
      
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cyeniden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/buttoncustom"
        android:text="@string/yenidendene"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ctimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cdesc"
        android:layout_toLeftOf="@+id/cswitch1"
        android:background="@drawable/imagecustom"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="65sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/cswitch1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/confirm"
        android:text="@string/devam"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/cswitch1"
        android:layout_below="@+id/cswitch1"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>